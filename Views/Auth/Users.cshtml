@model List<AppUser>

<h5 class="card-title mb-4">
    Users
</h5>

<div class="row">
    @foreach (var user in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    @if (user.ProfilePicture != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(user.ProfilePicture)" 
                             alt="Profile Picture" 
                             class="rounded-circle mb-3" 
                             style="width: 100px; height: 100px; object-fit: cover;" />
                    }
                    else
                    {
                        <i class="bi bi-person-circle" style="font-size: 100px; color: #6c757d;"></i>
                    }
                    <h6 class="card-title">@user.Email</h6>
                    <p class="card-text text-muted small">@user.UserName</p>
                </div>
            </div>
        </div>
    }
</div>
    